{
  "manifest_version": 2,
  "name": "Tabzie",
  "version": "1",
  "description": "A minimal tab organiser",
  "homepage_url": "https://github.com/fgkolf/mozilla-ext",
  "icons": {
    "48": "/images/logo.png"
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "bookmarks"
  ],

  "browser_action": {
    "browser_style": false,
    "default_icon": "/images/logo.png",
    "default_title": "Tabzie",
    "default_popup": "/popup/index.html"
  }
}
