{
  "manifest_version": 2,
  "name": "Bookmark it!",
  "version": "1.1",
  "description": "A simple bookmark button",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/bookmark-it",
  "icons": {
    "48": "/images/shakira.jpg"
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "bookmarks"
  ],

  "browser_action": {
    "default_icon": "/images/shakira.jpg",
    "default_title": "shakira",
    "default_popup": "/popup/index.html"
  }
}
